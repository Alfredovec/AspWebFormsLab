@using GameStore.Web.App_LocalResources
@model IEnumerable<GameStore.Web.Models.UserDetailsViewModel>

@{
    ViewBag.Title = GlobalRes.Users;
}

<h2>@GlobalRes.Users</h2>

<p>
    @Html.ActionLink(GlobalRes.CreateNewUser, "CreateUser")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles)
            </td>
            <td>
                @Html.ActionLink(GlobalRes.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(GlobalRes.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(GlobalRes.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
