@using GameStore.Web.App_LocalResources
@model IEnumerable<GameStore.Web.Models.OrderDetailViewModel>

<div>
    <h3>@GlobalRes.OrderDetails</h3>
    <table>
        <thead>
            <tr>
                <th>
                    @GlobalRes.NumberSymbol
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 1;
            }
            @foreach (var i in Model)
            {
                <tr>
                    <td>@(index++)</td>
                    <td>@Html.ActionLink(i.Game.Name, "Get", new { controller = "Game", gameKey = i.Game.Key })</td>
                    <td>@i.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>
